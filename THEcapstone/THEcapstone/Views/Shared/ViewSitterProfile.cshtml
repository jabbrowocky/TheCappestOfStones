@model THEcapstone.Models.ViewProfileModel
@{
    ViewBag.Title = "ViewSitterProfile";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<h2>Profile</h2>
<hr />
<br />
<h4>Name: @Model.SitterProf.SitterFirstName  @Model.SitterProf.SitterLastName</h4>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">About Me</h3>
            </div>
            <div class="panel-body">

                <h4>@Model.SitterProf.BriefDescription</h4>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Experience:</h3>
            </div>
            <div class="panel-body">

                <h4>@Model.SitterProf.ExperienceDescription</h4>

            </div>
        </div>
    </div>

</div>
@Html.ActionLink("Send Message", "SendMsg", new { id = Model.SitterProf.Id, name = "Pet Sitter" }, new { @class = "btn btn-primary" })
@Html.ActionLink("Request", "RequestServices", new { id = Model.SitterProf.Id, profType = "Pet Sitter" }, new { @class = "btn btn-primary" })

