@model THEcapstone.Models.PSViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_SitterLayout.cshtml";
}

<h2>Profile</h2>
<hr />
<br />
<h4>Name: @Model.SitterProf.SitterFirstName  @Model.SitterProf.SitterLastName</h4>
<h4>Location: @Model.SitterProf.CityName</h4>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">About Me</h3>
            </div>
            <div class="panel-body">

                <h4>@Model.SitterProf.BriefDescription</h4>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Experience</h3>
            </div>
            <div class="panel-body">

                <h4>@Model.SitterProf.ExperienceDescription</h4>

            </div>
        </div>
    </div>

</div>




