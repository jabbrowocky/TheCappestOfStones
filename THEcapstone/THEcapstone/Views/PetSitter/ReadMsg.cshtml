@model THEcapstone.Models.PSViewModel
@{
    ViewBag.Title = "ReadMsg";
    Layout = "~/Views/Shared/_SitterLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Message
            </div>
            <div class="panel-body">
                <p>@Model.Msg.MsgText</p>
                <br />
                <br />
                <div class="row">
                    <div class="col-lg-offset-10">@Html.ActionLink("Reply", "ReplyToMessage", new { id = Model.Msg.MsgId }, new { @class = "btn btn-primary btn sm" })</div>
                </div>  
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-10">
                @Html.ActionLink("Delete", "DeleteMsg", new { id = Model.Msg.MsgId }, new { @class = "btn btn-danger btn-sm" })
                @Html.ActionLink("Inbox", "Inbox", new { id = Model.Sitter.SitterId }, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
</div>